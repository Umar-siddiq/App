@model List<Utility.Shared.ProductDto>

@{
    ViewData["Title"] = "Products";
}

<h2>Products</h2>

<P>
    <a asp-action="Create"> Create New Product </a>
</P>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">No Products Found</div>    
}


else{
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th> Product ID </th>
            <th> Name       </th>
            <th> List Price </th>
            <th> Actions    </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.ListPrice.ToString("C")</td>
                <div class="btn-group-sm"></div>
                <td>
                    <a asp-action="Edit"  asp-route-id="@product.ProductId"  class=" btn btn-warning"> Edit</a> 
                    <a asp-action="Delete"  asp-route-id="@product.ProductId"  class="btn btn-danger"> Delete </a>
                </td>
                    <div/>
                </tr>
        }
    </tbody>
</table>
}

